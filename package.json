{
  "name": "simpler-state",
  "version": "1.0.0-beta.1",
  "description": "The simplest app state management for React",
  "keywords": [
    "react",
    "state",
    "simple",
    "functional",
    "hooks"
  ],
  "repository": "github:arnelenero/simpler-state",
  "author": "Arnel Enero <aenero@gmail.com>",
  "license": "MIT",
  "homepage": "https://arnelenero.github.io/simpler-state/",
  "main": "lib/index.js",
  "module": "es/index.js",
  "typings": "./index.d.ts",
  "files": [
    "lib",
    "es",
    "index.d.ts"
  ],
  "scripts": {
    "build:lib": "cross-env BABEL_ENV=commonjs babel src --out-dir lib --ignore **/__tests__",
    "build:es": "babel src --out-dir es --ignore **/__tests__",
    "build": "npm run build:lib && npm run build:es",
    "clean": "rimraf lib es",
    "prepare": "npm run clean && npm test",
    "pretest": "npm run build",
    "test": "jest",
    "test:cov": "npm test -- --coverage && coveralls < coverage/lcov.info",
    "test:cov-local": "npm test -- --coverage"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "coveralls": "^3.1.0",
    "cross-env": "^5.2.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.16.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^24.9.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^2.7.1",
    "sinon": "^7.5.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js",
      "!src/index.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
