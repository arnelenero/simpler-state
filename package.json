{
  "name": "simpler-state",
  "version": "2.0.0-rc.2",
  "description": "The simplest app state management for React",
  "keywords": [
    "react",
    "state",
    "global",
    "shared",
    "data",
    "simple",
    "functional",
    "hooks"
  ],
  "author": "Arnel Enero <aenero@gmail.com>",
  "license": "MIT",
  "repository": "github:arnelenero/simpler-state",
  "homepage": "https://simpler-state.js.org",
  "main": "lib/index.js",
  "module": "es/index.js",
  "typings": "types/index.d.ts",
  "files": [
    "lib",
    "es",
    "types"
  ],
  "sideEffects": false,
  "scripts": {
    "build:lib": "cross-env BUILD_TARGET=commonjs babel src --out-dir lib --extensions .ts,.tsx --ignore **/__tests__/**",
    "build:es": "babel src --out-dir es --extensions .ts,.tsx --ignore **/__tests__/**",
    "build": "npm run clean && npm run compile && npm run build:lib && npm run build:es",
    "clean": "rimraf build types lib es",
    "compile": "tsc",
    "prepare": "npm test",
    "pretest": "npm run build",
    "test": "jest",
    "test:cov": "npm test -- --coverage && coveralls < coverage/lcov.info",
    "test:cov-local": "npm test -- --coverage"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "use-sync-external-store": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@types/jest": "^29.5.1",
    "@types/react": "^16.14.25",
    "@types/react-dom": "^16.9.15",
    "@types/use-sync-external-store": "^0.0.3",
    "babel-jest": "^29.5.0",
    "babel-preset-react-app": "^10.0.1",
    "coveralls": "^3.1.0",
    "cross-env": "^5.2.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-localstorage-mock": "^2.4.26",
    "prettier": "^2.8.7",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^2.7.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
