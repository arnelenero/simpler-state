{
  "name": "simpler-state",
  "version": "2.0.0-rc.12",
  "description": "The simplest app state management for React",
  "keywords": [
    "react",
    "state",
    "global",
    "shared",
    "data",
    "simple",
    "functional",
    "hooks"
  ],
  "author": "Arnel Enero <aenero@gmail.com>",
  "license": "MIT",
  "repository": "github:arnelenero/simpler-state",
  "homepage": "https://simpler-state.js.org",
  "main": "./index.js",
  "module": "./__es__/index.js",
  "types": "./index.d.ts",
  "files": [
    "**"
  ],
  "sideEffects": false,
  "scripts": {
    "build:lib": "cross-env BUILD_TARGET=commonjs babel src --out-dir dist --extensions .ts,.tsx --ignore \"**/__tests__/**\"",
    "build:es": "babel src --out-dir dist/__es__ --extensions .ts,.tsx --ignore \"**/__tests__/**\"",
    "build": "npm run clean && npm run compile && npm run build:lib && npm run build:es && npm run copy",
    "clean": "rimraf dist",
    "copy": "cp package.json dist",
    "compile": "tsc",
    "test": "jest",
    "test:cov": "npm test -- --coverage && coveralls < coverage/lcov.info",
    "test:cov-local": "npm test -- --coverage"
  },
  "dependencies": {
    "@babel/runtime": "^7.21.0",
    "use-sync-external-store": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/use-sync-external-store": "^0.0.3",
    "babel-jest": "^29.5.0",
    "babel-preset-react-app": "^10.0.1",
    "coveralls": "^3.1.0",
    "cross-env": "^5.2.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-localstorage-mock": "^2.4.26",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^2.7.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
